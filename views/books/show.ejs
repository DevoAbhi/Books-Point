<h2 class="page-header"><%= book.title %> Book</h2>
<div class="book-details">

    <div>
    <img class="book-cover" src="<%= book.coverImagePath %> " alt="">
        <div class="book-details-btn-grid">
            <button class="btn btn-primary"><a href="/books/<%= book.id %>/edit ">Edit</a></button>
            <%- include('../partials/deleteForm',{
                url : `/books/${book.id}`
            }) %> 
                <button class="btn btn-primary book-details-author-button" ><a href="/authors/<%= book.author.id %> ">View Author</a></button>
        </div>
                
    </div>

<div class="book-details-grid">
    <div class="book-details-label">Author :</div>
        <div><%= book.author.name %> </div>
    <div class="book-details-label">Publish Date :</div>
        <div> <%= book.publishDate.toDateString() %> </div>
    <div class="book-details-label">Page Count :</div>
        <div> <%= book.pageCount %> </div>
    <div class="book-details-label">Description :</div>
        <div> <%= book.description %> </div>
    </div> 
</div>






